<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StarWish" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/star_blue</item>
        <item name="colorPrimaryVariant">@color/star_blue_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/star_gold</item>
        <item name="colorSecondaryVariant">@color/star_gold_dark</item>
        <item name="colorOnSecondary">@color/space_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/space_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/space_dark</item>
    </style>
</resources>